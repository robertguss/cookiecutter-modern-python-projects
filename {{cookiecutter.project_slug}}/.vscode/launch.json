{% if cookiecutter.include_vscode_settings == 'y' -%}
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "{% if cookiecutter.use_src_layout == 'y' %}${workspaceFolder}/src{% else %}${workspaceFolder}{% endif %}"
            }
        },
        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["${workspaceFolder}/tests"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "{% if cookiecutter.use_src_layout == 'y' %}${workspaceFolder}/src{% else %}${workspaceFolder}{% endif %}"
            }
        }{% if cookiecutter.include_fastapi == 'y' %},
        {
            "name": "FastAPI: Debug Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "{{ cookiecutter.project_slug }}.api:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "{% if cookiecutter.use_src_layout == 'y' %}${workspaceFolder}/src{% else %}${workspaceFolder}{% endif %}"
            }
        }{% endif %}{% if cookiecutter.include_typer == 'y' %},
        {
            "name": "CLI: Debug",
            "type": "python",
            "request": "launch",
            "module": "{{ cookiecutter.project_slug }}.cli",
            "args": ["--help"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "{% if cookiecutter.use_src_layout == 'y' %}${workspaceFolder}/src{% else %}${workspaceFolder}{% endif %}"
            }
        }{% endif %}
    ]
}
{% endif %}
